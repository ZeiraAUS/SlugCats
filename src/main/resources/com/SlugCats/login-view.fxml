<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.SlugCats.controller.LoginController" fx:id="rootPane">
    <VBox BorderPane.alignment="CENTER" alignment="CENTER">
        <Label text="Login" fx:id="loginLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Label text="Email" fx:id="emailLabel" style="-fx-font-size: 18px;"/>
        <TextField fx:id="emailField" style="-fx-font-size: 16px;" prefWidth="200"/>
        <Label text="Password" fx:id="passwordLabel" style="-fx-font-size: 18px;"/>
        <PasswordField fx:id="passwordField" style="-fx-font-size: 16px;" prefWidth="200"/>
        <HBox spacing="10.0" alignment="CENTER" fx:id="buttonBox">
            <Button text="Login" fx:id="loginButton" style="-fx-font-size: 16px;" prefWidth="100"/>
            <Button text="Register" fx:id="registerButton" style="-fx-font-size: 16px;" prefWidth="100"/>
        </HBox>
    </VBox>
</BorderPane>

