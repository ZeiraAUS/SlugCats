<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.image.ImageView?>

<BorderPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.SlugCats.controller.RegisterController">
    <HBox BorderPane.alignment="TOP_LEFT" fx:id="headerBox">
        <ImageView fx:id="logoImage"
                   fitHeight="150.0"
                   preserveRatio="true"
                   BorderPane.alignment="TOP_LEFT"
        />
        <Button fx:id="backButton" onAction="#onBackButtonClick" style="-fx-font-size: 24px;" prefWidth="250" text="Back"/>
    </HBox>

    <padding>
        <Insets bottom="20.0" left="20.0" right="100.0" top="15.0"/>
    </padding>

    <VBox>
        <Label fx:id="usernameLabel" text="Username:" style="-fx-font-size: 24px;"/>
        <Label fx:id="passwordLabel" text="Password:" style="-fx-font-size: 24px;"/>
        <Label fx:id="firstNameLabel" text="First Name:" style="-fx-font-size: 24px;"/>
        <Label fx:id="lastNameLabel" text="Last Name:" style="-fx-font-size: 24px;"/>
        <Label fx:id="emailLabel" text="Email:" style="-fx-font-size: 24px;"/>

        <Button fx:id="registerButton" style="-fx-font-size: 24px;" prefWidth="250" onAction="#onRegisterButtonClick" text="Register"/>
    </VBox>
    <VBox>
        <TextField fx:id="usernameField" style="-fx-font-size: 24px;" prefWidth="350.0"/>
        <TextField fx:id="passwordField" style="-fx-font-size: 24px;" prefWidth="350.0"/>
        <TextField fx:id="firstNameField" style="-fx-font-size: 24px;" prefWidth="350.0"/>
        <TextField fx:id="lastNameField" style="-fx-font-size: 24px;" prefWidth="350.0"/>
        <TextField fx:id="emailField" style="-fx-font-size: 24px;" prefWidth="350.0"/>
    </VBox>
</BorderPane>
